@model ProfileModel
@{
    ViewData["Title"] = "Редагувати профіль";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div class="card shadow-sm p-4">
                    <h3>Редагувати профіль</h3>

                    <div class="mb-3">
                        <label>Ім'я користувача</label>
                        <input asp-for="Username" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label>Email</label>
                        <input asp-for="Email" type="email" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label>Фото профілю</label>
                        <input asp-for="ProfileImage" type="file" class="form-control" />
                        @if (!string.IsNullOrEmpty(Model.ExistingImageUrl))
                        {
                            <img src="@Model.ExistingImageUrl" alt="Фото профілю" style="width: 80px; height: 80px; margin-top: 10px;" />
                        }
                    </div>

                    <button type="submit" class="btn btn-success">Зберегти зміни</button>
                </div>
            </form>
        </div>
    </div>
</div>
