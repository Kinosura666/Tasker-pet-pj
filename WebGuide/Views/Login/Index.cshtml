@model WebGuide.Models.Login

@{
    ViewData["Title"] = "Увійти";
}

<div class="container my-5">
    <div class="mx-auto" style="max-width: 500px;">
        <h2 class="text-center mb-4">🔐 Вхід до акаунту</h2>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger rounded-3 shadow-sm mb-4">
                <strong>⚠ Увага:</strong>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }

        <form asp-action="Index" asp-controller="Login" method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <button type="submit" class="btn btn-success">✅ Увійти</button>
                <a asp-controller="Register" asp-action="Index" class="btn btn-outline-secondary">Реєстрація</a>
            </div>
            <a class="btn btn-outline-primary" href="/google-login">
                <img src="https://developers.google.com/identity/images/g-logo.png" width="20" class="me-2" />
                Увійти через Google
            </a>

        </form>
    </div>
</div>
